# Production Environment Configuration
# This file should be copied to .env in production and filled with actual values

# Application
APP_NAME=PoliticianFinder
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False

# Server
HOST=0.0.0.0
PORT=8000

# Database (Use production database URL)
DATABASE_URL=postgresql://user:password@production-db-host:5432/politician_finder
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Security
# IMPORTANT: Generate a strong secret key for production
# Use: openssl rand -hex 32
SECRET_KEY=REPLACE_WITH_STRONG_SECRET_KEY_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
# Production origins - NO WILDCARDS ALLOWED
CORS_ORIGINS=https://politicianfinder.vercel.app,https://www.politicianfinder.com
CORS_CREDENTIALS=True

# New CORS Settings
CORS_ALLOWED_ORIGINS=
CORS_MAX_AGE=3600
CORS_ALLOW_WILDCARDS=False

# Security Headers (Always enabled in production)
ENABLE_SECURITY_HEADERS=True
CSP_REPORT_URI=https://your-csp-report-endpoint.com/report

# Monitoring
ENABLE_CORS_LOGGING=True
LOG_LEVEL=WARNING

# API Keys (Secure with secrets management)
CLAUDE_API_KEY=your-production-claude-api-key
ANTHROPIC_API_KEY=your-production-anthropic-api-key
OPENAI_API_KEY=your-production-openai-api-key
GOOGLE_AI_API_KEY=your-production-google-ai-key

# Supabase (Production credentials)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-production-supabase-key

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif

# SECURITY CHECKLIST:
# [ ] SECRET_KEY is a strong random value (not default)
# [ ] All API keys are production values
# [ ] CORS_ORIGINS contains only HTTPS URLs
# [ ] DEBUG is False
# [ ] Database credentials are secure
# [ ] This .env file is NOT committed to git
# [ ] HTTPS is enforced for all connections
# [ ] Rate limiting is configured
# [ ] Logging is set to WARNING or ERROR
