# Staging Environment Configuration
# This file should be copied to .env in staging and filled with actual values

# Application
APP_NAME=PoliticianFinder
APP_VERSION=1.0.0
ENVIRONMENT=staging
DEBUG=False

# Server
HOST=0.0.0.0
PORT=8000

# Database (Use staging database URL)
DATABASE_URL=postgresql://user:password@staging-db-host:5432/politician_finder_staging
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Security
SECRET_KEY=staging-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
# Staging origins - HTTPS only
CORS_ORIGINS=https://staging.politicianfinder.vercel.app,https://politician-finder-staging.vercel.app
CORS_CREDENTIALS=True

# New CORS Settings
CORS_ALLOWED_ORIGINS=
CORS_MAX_AGE=3600
CORS_ALLOW_WILDCARDS=False

# Security Headers
ENABLE_SECURITY_HEADERS=True
CSP_REPORT_URI=

# Monitoring
ENABLE_CORS_LOGGING=True
LOG_LEVEL=INFO

# API Keys (Use staging/test API keys)
CLAUDE_API_KEY=your-staging-claude-api-key
ANTHROPIC_API_KEY=your-staging-anthropic-api-key
OPENAI_API_KEY=your-staging-openai-api-key
GOOGLE_AI_API_KEY=your-staging-google-ai-key

# Supabase (Staging credentials)
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_KEY=your-staging-supabase-key

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif
