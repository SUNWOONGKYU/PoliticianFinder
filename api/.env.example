# Application
APP_NAME=PoliticianFinder
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/politician_finder
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
# Legacy setting (for backward compatibility)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=True

# New CORS Settings (Optional - overrides environment defaults)
# Leave empty to use environment-based defaults
CORS_ALLOWED_ORIGINS=
CORS_MAX_AGE=3600
CORS_ALLOW_WILDCARDS=False

# Security Headers
ENABLE_SECURITY_HEADERS=True
CSP_REPORT_URI=

# Monitoring
ENABLE_CORS_LOGGING=True
LOG_LEVEL=INFO

# API Keys
CLAUDE_API_KEY=your-claude-api-key-here

# Supabase (Phase 1에서는 미사용)
SUPABASE_URL=
SUPABASE_KEY=

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif