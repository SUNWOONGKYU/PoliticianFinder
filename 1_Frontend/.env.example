# ============================================================================
# Frontend Environment Variables Template
# ============================================================================
# 이 파일을 .env.local로 복사한 후 실제 값을 입력하세요
# Copy this file to .env.local and fill in actual values

# ============================================================================
# Supabase 설정
# ============================================================================
# Supabase 콘솔 (https://app.supabase.com) > Settings > API 에서 발급
# Get from: Supabase Dashboard > Settings > API

# Supabase 프로젝트 URL
# Project Reference: ooddlafwdpzgxfefgsrx
NEXT_PUBLIC_SUPABASE_URL=https://ooddlafwdpzgxfefgsrx.supabase.co

# Supabase Anon Key (공개 키 - 클라이언트 측에서 사용)
# 🔑 Get from: Supabase Dashboard > Settings > API > Project API keys > anon key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================================================
# Google OAuth 설정
# ============================================================================
# Google Cloud Console에서 발급: https://console.cloud.google.com
# Get from: Google Cloud Console > APIs & Services > Credentials

# Google OAuth Client ID
# Format: xxxxx-abcdefghijklmnopqrstuvwxyz.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id

# Google OAuth Client Secret
# Format: GOCSPX-xxxxxxxxxxxxxxxxxxxxx
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret

# ============================================================================
# Next.js 설정
# ============================================================================

# API Base URL
NEXT_PUBLIC_API_URL=http://localhost:3002/api

# Site URL (개발: localhost, 프로덕션: https://politicianfinder.com)
NEXT_PUBLIC_SITE_URL=http://localhost:3002

# 환경 (development, staging, production)
NEXT_PUBLIC_ENV=development

# ============================================================================
# 기능 플래그
# ============================================================================

# 구글 OAuth 활성화
NEXT_PUBLIC_ENABLE_GOOGLE_OAUTH=true

# 이메일 인증 필수
NEXT_PUBLIC_REQUIRE_EMAIL_VERIFICATION=true

# 회원가입 활성화
NEXT_PUBLIC_ENABLE_SIGNUP=true

# ============================================================================
# OpenAI API 설정 (자동 중재 시스템용)
# ============================================================================
# OpenAI 콘솔 (https://platform.openai.com) > API keys 에서 발급
# Get from: OpenAI Dashboard > API keys

# OpenAI API Key
# 🔑 Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model (선택 사항, 기본값: gpt-4o-mini)
# Options: gpt-4o-mini, gpt-4o, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# Supabase Service Role Key (서버 전용)
# ============================================================================
# 관리자 API에서 사용하는 서비스 키 (절대 클라이언트에 노출 금지!)
# 🔑 Get from: Supabase Dashboard > Settings > API > service_role key

SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================================================
# Vercel Cron Secret (서버 전용)
# ============================================================================
# Cron job 인증에 사용되는 비밀 키
# Vercel Dashboard > Settings > Environment Variables 에서 설정
# 로컬 개발 시에는 임의의 문자열 사용 가능

CRON_SECRET=your_cron_secret_here

# ============================================================================
# AI 평가 시스템 설정 (Phase 4)
# ============================================================================
# 정치인 AI 평가 리포트 생성에 사용되는 5개 AI 모델 API 키

# Anthropic Claude API Key
# 🔑 Get from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API Key
# 🔑 Get from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# xAI Grok API Key
# 🔑 Get from: https://x.ai/api
XAI_API_KEY=your_xai_api_key_here

# Perplexity API Key
# 🔑 Get from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ============================================================================
# 결제 시스템 설정 (Phase 4 - 토스페이먼츠)
# ============================================================================
# AI 평가 리포트 구매 결제 시스템
# Get from: 토스페이먼츠 개발자센터 (https://developers.tosspayments.com)

# 토스페이먼츠 Client Key (공개 키 - 클라이언트 측에서 사용)
NEXT_PUBLIC_TOSS_CLIENT_KEY=your_toss_client_key_here

# 토스페이먼츠 Secret Key (비밀 키 - 서버 전용, 절대 클라이언트에 노출 금지!)
# 🔑 Get from: 토스페이먼츠 > 개발자센터 > API 키 관리
TOSS_SECRET_KEY=your_toss_secret_key_here

# ============================================================================
# SMTP 설정 (Phase 4 - 정치인 검증 이메일)
# ============================================================================
# 정치인 본인 인증 이메일 발송에 사용
# Gmail, AWS SES, SendGrid 등 SMTP 서비스 사용 가능

# SMTP 서버 호스트 (예: smtp.gmail.com, smtp.sendgrid.net)
SMTP_HOST=smtp.gmail.com

# SMTP 포트 (일반적으로 587 또는 465)
SMTP_PORT=587

# SMTP 사용자 이메일
SMTP_USER=your_email@gmail.com

# SMTP 비밀번호 또는 앱 비밀번호
# Gmail 사용 시: 앱 비밀번호 생성 필요 (https://myaccount.google.com/apppasswords)
SMTP_PASS=your_smtp_password_here

# ============================================================================
# 주의사항 (IMPORTANT)
# ============================================================================
# ❌ 이 파일을 .env.local로 복사한 후 실제 값을 입력하세요
# ❌ .env.local을 Git에 커밋하지 마세요 (.gitignore에 포함됨)
# ❌ 민감한 정보(Secret Key 등)를 이 파일에 커밋하지 마세요
# ✅ 프로덕션 배포 시 GitHub Secrets 또는 Vercel Environment Variables 사용
# ✅ Mock 모드: AI API 키 없이도 개발 가능 (Mock 데이터 자동 반환)
